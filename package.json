{
  "name": "gulag-api",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.urbica.co:2222/gulag/api.git"
  },
  "main": "index.js",
  "scripts": {
    "db:create": "pg-migrate -m ./src/db/migrations new",
    "db:migrate": "pg-migrate -m ./src/db/migrations migrate",
    "db:rollback": "pg-migrate -m ./src/db/migrations rollback",
    "db:reset": "pg-migrate -m ./src/db/migrations reset",
    "cz": "git-cz",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "release": "standart-version",
    "start": "API_PORT=3001 nodemon index.js  --ignore client",
    "test": "jest"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier-eslint --write",
      "yarn lint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "21.15.1",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.1.0",
    "nodemon": "1.17.4",
    "prettier": "1.12.1",
    "prettier-eslint": "8.8.1",
    "prettier-eslint-cli": "4.7.1",
    "standard-version": "4.3.0",
    "supertest": "3.0.0"
  },
  "dependencies": {
    "@urbica/pg-migrate": "1.0.3",
    "bluebird": "3.5.1",
    "dotenv": "5.0.1",
    "jsonwebtoken": "8.2.1",
    "kcors": "2.2.1",
    "koa": "2.5.1",
    "koa-bodyparser": "4.2.0",
    "koa-jwt": "3.3.1",
    "koa-multer": "1.0.2",
    "koa-router": "7.4.0",
    "morgan": "^1.10.0",
    "pg": "^8"
  }
}
