{
  "name": "gulag-api",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.urbica.co:2222/gulag/api.git"
  },
  "main": "index.js",
  "scripts": {
    "db:create": "pg-migrate -m ./src/db/migrations new",
    "db:migrate": "pg-migrate -m ./src/db/migrations migrate",
    "db:rollback": "pg-migrate -m ./src/db/migrations rollback",
    "db:reset": "pg-migrate -m ./src/db/migrations reset",
    "cz": "git-cz",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "release": "standart-version",
    "start": "API_PORT=3001 nodemon index.js",
    "test": "jest"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier-eslint --write",
      "yarn lint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "commitizen": "3.0.4",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.0.0",
    "husky": "1.1.4",
    "jest": "23.6.0",
    "lint-staged": "8.0.5",
    "nodemon": "1.18.6",
    "prettier": "1.15.2",
    "prettier-eslint": "8.8.2",
    "prettier-eslint-cli": "4.7.1",
    "standard-version": "4.4.0",
    "supertest": "3.3.0"
  },
  "dependencies": {
    "@urbica/pg-migrate": "1.0.3",
    "bluebird": "3.5.3",
    "dotenv": "6.1.0",
    "jsonwebtoken": "8.4.0",
    "kcors": "2.2.2",
    "koa": "2.6.2",
    "koa-bodyparser": "4.2.1",
    "koa-jwt": "3.5.1",
    "koa-multer": "1.0.2",
    "koa-router": "7.4.0",
    "pg": "7.6.1"
  }
}
